@model ICollection<Student>

@{
    ViewData["Title"] = "Estudantes/Matriculas";
}

<div class="text-center">
    <h1 class="display-4">
        @Model.Count estudantes/matriculas.
    </h1>

    <a asp-controller="StudentCourses" asp-action="Create" class="btn btn-primary">
        Nova Matricula
    </a>
    <table class="table table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Data matrícula</th>
                <th>Excluir</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.ID</td>
                    <td>@s.FirstMidName</td>
                    <td>@s.LastName</td>
                    <td>@s.EnrollmentDate.ToShortDateString()</td>
                    <td>
                        <form asp-controller="Home" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@s.ID" />
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Confirma a exclusão da matrícula?');">
                                Excluir
                            </button>
                        </form>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@s.StudentCourses" class="btn btn-sm">
                            Editar
                        </a>
                    </td>
                </tr>
                @if (s.StudentCourses.Count > 0)
                {
                    <tr>
                        <th>Cursos</th>
                        <td>
                            <ul>
                                @foreach (var sc in s.StudentCourses)
                                {
                                    <li> - @sc.Course?.Name</li>
                                }
                            </ul>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
