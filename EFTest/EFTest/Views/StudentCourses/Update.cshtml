@using EFTest.ViewModels.StudentCourses;

@model StudentCoursesViewModel

@{
    ViewData["Title"] = "Alterar Matricula";
}

<h1>Update</h1>
<h4>Matricula</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-route-studentId="@Model.StudentId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="StudentId" />

            <div class="form-group">
                @for(int i = 0; i < Model.Courses.Count; i++)
                {
                    <div class="form-check">
                        <input type="checkbox"
                               asp-for="Courses[i].IsSelected"
                               class="form-check-input" />
                        <input type="hidden"
                               asp-for="Courses[i].Id" />
                        <label asp-for="Courses[i].IsSelected"
                               class="form-check-label">
                            @Model.Courses[i].Name
                        </label>
                    </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
