@model ICollection<Veterinaria.Models.Animal>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">
        @Model.Count animais.
    </h1>
    
    <table class="table table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Espécie</th>
                <th>Data de Nascimento</th>
                <th>Raça</th>
                <th>Cor</th>
                <th>Peso</th>
                <th>Altura</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.Nome</td>
                    <td>@a.TipoAnimal?.Especie</td>
                    <td>@a.DtNascimento.ToShortDateString()</td>
                    <td>@a.Raca</td>
                    <td>@a.Cor</td>
                    <td>@a.Peso</td>
                    <td>@a.Altura</td>
                </tr>
            }
        </tbody>
    </table>
</div>
